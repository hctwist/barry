<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/open_sans_regular</item>

        <item name="colorControlNormal">?android:attr/textColorPrimary</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="shapeAppearanceMediumComponent">@style/MediumShape</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
        <item name="chipStyle">@style/Chip</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <!-- New styles -->

    <style name="Label">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Display">

        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/cabin_semibold</item>
    </style>

    <style name="Body">

        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Body.Prominent">

        <item name="android:fontFamily">@font/cabin_semibold</item>
    </style>

    <style name="Title">

        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/cabin_semibold</item>
    </style>

    <style name="ElementTag" parent="Label">

        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/element_tag_background</item>
    </style>

    <style name="TextMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">

        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MaterialCardView.Container" parent="MaterialCardView">

        <item name="strokeWidth">0dp</item>
    </style>

    <!-- New styles end -->

    <style name="IconButton">

        <item name="android:padding">@dimen/icon_touch_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Heading">

        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DayHeading">

        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Body.Day">

        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="ForecastElementValue" parent="Body">

        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay50</item>
    </style>

    <style name="ShapeAppearanceOverlay50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Action">

        <item name="chipBackgroundColor">?android:attr/colorBackground</item>
        <item name="chipStrokeColor">@color/stroke</item>
        <item name="chipStrokeWidth">@dimen/stroke_width</item>
        <item name="chipStartPadding">@dimen/margin</item>
        <item name="chipEndPadding">@dimen/margin</item>
        <item name="iconEndPadding">@dimen/half_margin</item>
    </style>

    <style name="TextMaterialToggleButton" parent="TextMaterialButton">

        <item name="rippleColor">@null</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="android:minWidth">@dimen/min_touch_size</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">@dimen/margin</item>
    </style>

    <style name="SearchBox">

        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:drawableStart">@drawable/outline_search_24</item>
        <item name="android:drawablePadding">@dimen/margin</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>