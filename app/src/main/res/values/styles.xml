<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>

        <item name="android:textColorTertiary">@color/text_color_tertiary</item>

        <item name="shapeAppearanceMediumComponent">@style/MediumShape</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="Display">

        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="Display.Sub">

        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="DisplayBody">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Title">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Subtitle.Navigation">

        <item name="drawableEndCompat">@drawable/round_arrow_right_alt_24</item>
        <item name="android:drawablePadding">@dimen/half_margin</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="drawableTint">?android:attr/textColorTertiary</item>
    </style>

    <style name="Subtitle">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <!-- TODO Sort out text styles -->
    <style name="SubSubTitle">

        <item name="android:textSize">@dimen/text_extra_small</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">

        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerSize">@dimen/corner_radius</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">

        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay50</item>
    </style>

    <style name="ShapeAppearanceOverlay50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToggleMaterialButton" parent="TextMaterialButton">

        <item name="background">@drawable/round_more_vert_24</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="MainTabAppearance" parent="TextAppearance.AppCompat">

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="SearchBox">

        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">textPostalAddress</item>
        <item name="android:background">@drawable/search_box</item>
        <item name="android:drawableStart">@drawable/round_search_24</item>
        <item name="android:drawablePadding">@dimen/margin</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>