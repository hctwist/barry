<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/medium_content_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/MarvDisplay.Small"
            android:layout_weight="1"
            android:text="2:30pm"
            android:layout_marginStart="@dimen/horizontal_layout_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MarvSubtitle"
            android:layout_marginEnd="@dimen/horizontal_layout_margin"
            android:text="4th December"/>
    </LinearLayout>
</layout>