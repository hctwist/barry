<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dummy"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO Rename the files like this one, not being used as fragment -->
        <TextView
            android:id="@+id/main_daily_title"
            style="@style/MarvTitle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_inset"
            android:text="@string/section_daily"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_daily_items"
            itemMargins="@{@dimen/margin}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_inset"
            android:layout_marginTop="@dimen/main_titles_margin"
            android:layout_marginBottom="@dimen/card_inset"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_daily_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>