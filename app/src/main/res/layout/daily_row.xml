<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.twisthenry8gmail.projectbarry.view.WeatherConditionDisplay" />

        <import type="com.twisthenry8gmail.projectbarry.util.TimeDisplayUtil" />

        <import type="com.twisthenry8gmail.projectbarry.view.ForecastDisplayUtil" />

        <variable
            name="forecast"
            type="com.twisthenry8gmail.projectbarry.data.DailyForecast" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/daily_day"
                style="@style/Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{TimeDisplayUtil.INSTANCE.displayHumanDay(forecast.day), default = Monday}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:text="@{WeatherConditionDisplay.INSTANCE.getStringResource(forecast.condition), default = Sunny}"
                app:layout_constraintBaseline_toBaselineOf="@id/daily_day"
                app:layout_constraintStart_toEndOf="@id/daily_day" />

            <TextView
                android:id="@+id/daily_temp_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="@{ForecastDisplayUtil.INSTANCE.displayTemperature(context, forecast.tempLow), default = 21}"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daily_day" />

            <ImageView
                android:id="@+id/daily_temp_low_icon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_marginStart="@dimen/half_margin"
                android:src="@drawable/round_arrow_downward_24"
                app:layout_constraintBottom_toBottomOf="@id/daily_temp_low"
                app:layout_constraintStart_toEndOf="@id/daily_temp_low"
                app:layout_constraintTop_toTopOf="@id/daily_temp_low"
                app:tint="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/daily_temp_high"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@id/daily_temp_low_icon"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:text="@{ForecastDisplayUtil.INSTANCE.displayTemperature(context, forecast.tempHigh), default = 22}"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_large"
                app:layout_constraintBaseline_toBaselineOf="@id/daily_temp_low" />

            <ImageView
                android:id="@+id/daily_temp_high_icon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_marginStart="@dimen/half_margin"
                android:src="@drawable/round_arrow_upward_24"
                app:layout_constraintBottom_toBottomOf="@id/daily_temp_high"
                app:layout_constraintStart_toEndOf="@id/daily_temp_high"
                app:layout_constraintTop_toTopOf="@id/daily_temp_high"
                app:tint="?android:attr/textColorPrimary" />

            <ImageView
                android:id="@+id/daily_icon"
                android:layout_width="@dimen/daily_icon"
                android:layout_height="@dimen/daily_icon"
                android:src="@{WeatherConditionDisplay.INSTANCE.getImageResource(forecast.condition, true) == null ? null : context.getDrawable(WeatherConditionDisplay.INSTANCE.getImageResource(forecast.condition, true))}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>