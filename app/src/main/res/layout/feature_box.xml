<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.twisthenry8gmail.projectbarry.core.ForecastDisplayUtil" />

        <variable
            name="element"
            type="com.twisthenry8gmail.projectbarry.core.ForecastElement" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="@dimen/margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feature_box_title"
                style="@style/Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ForecastDisplayUtil.INSTANCE.getElementTitle(context, element)}" />

            <TextView
                android:id="@+id/feature_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/quarter_margin"
                android:drawablePadding="@dimen/half_margin"
                android:text="@{ForecastDisplayUtil.INSTANCE.getElementDisplayString(context, element)}"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@{ForecastDisplayUtil.INSTANCE.getElementIcon(context, element)}" />
    </com.google.android.material.card.MaterialCardView>
</layout>