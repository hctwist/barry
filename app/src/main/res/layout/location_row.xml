<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="location"
            type="com.twisthenry8gmail.projectbarry.domain.core.SavedLocation" />

        <variable
            name="clicklistener"
            type="com.twisthenry8gmail.projectbarry.application.view.locations.LocationChoiceAdapter.ClickHandler" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/min_touch_size"
        android:onClick="@{() -> clicklistener.onClick(location)}">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_layout_margin"
            android:layout_weight="1"
            android:text="@{location.name}"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- TODO Not using attribute for tertiary color -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/horizontal_layout_margin"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="@dimen/min_touch_size"
            android:minHeight="@dimen/min_touch_size"
            android:onClick="@{() -> clicklistener.onPin(location)}"
            android:src="@drawable/round_push_pin_24"
            android:tint="@{location.pinned ? @color/location_pinned : @color/text_color_tertiary}" />
    </LinearLayout>
</layout>