<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="dummy"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_hourly_title"
            style="@style/MarvTitle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_inset"
            android:text="@string/section_hourly"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_hourly_items"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            itemMargins="@{@dimen/double_margin}"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_inset"
            android:layout_marginTop="@dimen/main_titles_margin"
            android:layout_marginBottom="@dimen/card_inset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_hourly_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>