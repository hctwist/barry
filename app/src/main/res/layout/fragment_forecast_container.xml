<?xml version="1.0" encoding="utf-8"?>
<com.twisthenry8gmail.projectbarry.view.CustomSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_container_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin">

        <ImageView
            android:layout_width="@dimen/main_refresh_icon"
            android:layout_height="@dimen/main_refresh_icon"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_foreground" />
    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/forecast_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.twisthenry8gmail.projectbarry.view.CustomSwipeRefreshLayout>