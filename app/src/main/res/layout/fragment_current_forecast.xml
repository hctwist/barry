<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.twisthenry8gmail.projectbarry.util.ForecastDisplayUtil" />

        <import type="com.twisthenry8gmail.projectbarry.data.Temperature.Scale" />

        <import type="com.twisthenry8gmail.projectbarry.view.locations.LocationUtil" />

        <variable
            name="viewmodel"
            type="com.twisthenry8gmail.projectbarry.viewmodel.CurrentForecastViewModel" />
    </data>

    <com.twisthenry8gmail.projectbarry.view.CustomSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:refreshing="@{viewmodel.refreshing}">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin">

            <ImageView
                android:id="@+id/main_refreshing_light"
                android:layout_width="@dimen/main_refresh_icon"
                android:layout_height="@dimen/main_refresh_icon"
                android:layout_gravity="center"
                android:src="@drawable/refreshing_light" />

            <ImageView
                android:layout_width="@dimen/main_refresh_icon"
                android:layout_height="@dimen/main_refresh_icon"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_foreground" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/main_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_layout_margin"
                android:layout_marginTop="72dp"
                android:onClick="@{() -> viewmodel.onLocationClicked()}"
                app:cardBackgroundColor="@color/light_card"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/margin"
                    android:paddingVertical="@dimen/half_margin">

                    <ImageView
                        android:id="@+id/main_location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{viewmodel.locationIconRes == null ? null : context.getDrawable(viewmodel.locationIconRes)}"
                        app:tint="?android:attr/textColorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:text="@{viewmodel.locationName == null ? @string/location_error : viewmodel.locationName}"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/main_temperature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/horizontal_layout_margin"
                android:autoSizeMaxTextSize="@dimen/main_temperature"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@{viewmodel.currentTemperature == null ? null : ForecastDisplayUtil.INSTANCE.displayTemperature(context, viewmodel.currentTemperature)}"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/main_icon"
                app:layout_constraintEnd_toStartOf="@id/main_icon"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/main_icon" />

            <ImageView
                android:id="@+id/main_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/double_margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginEnd="@dimen/horizontal_layout_margin"
                android:src="@{viewmodel.conditionIcon == null ? null : context.getDrawable(viewmodel.conditionIcon)}"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintStart_toEndOf="@id/main_temperature"
                app:layout_constraintTop_toBottomOf="@id/main_location" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/horizontal_layout_margin"
                android:layout_marginTop="@dimen/large_content_margin"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/main_icon" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_hourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_layout_margin"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/horizontal_layout_margin"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.twisthenry8gmail.projectbarry.view.CustomSwipeRefreshLayout>
</layout>