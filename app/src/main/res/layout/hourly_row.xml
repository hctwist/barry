<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.twisthenry8gmail.projectbarry.util.TimeUtil" />

        <import type="com.twisthenry8gmail.projectbarry.util.ForecastDisplayUtil" />

        <import type="com.twisthenry8gmail.projectbarry.view.WeatherConditionDisplay" />

        <variable
            name="forecast"
            type="com.twisthenry8gmail.projectbarry.data.HourlyForecast" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ForecastDisplayUtil.INSTANCE.displayTemperature(context, forecast.temp)}"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/hourly_icon"
            android:layout_height="@dimen/hourly_icon"
            android:layout_marginTop="@dimen/half_margin"
            android:src="@{WeatherConditionDisplay.INSTANCE.getImageResource(forecast.condition, false) == null ? null : context.getDrawable(WeatherConditionDisplay.INSTANCE.getImageResource(forecast.condition, false)รณ)}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_margin"
            android:text="@{TimeUtil.INSTANCE.displayTime(forecast.time)}" />
    </LinearLayout>
</layout>